<Window x:Class="Hitbox.Window_add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hitbox"
        mc:Ignorable="d"
        Title="Window_add" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="Add_Name" Text="{Binding Streamer.Name}"/>
        <Button Content="OK" Grid.Column="1" Command="{Binding OKCommand}"/>

    </Grid>
</Window>
